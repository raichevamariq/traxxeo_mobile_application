<body style="background:#344d75;;position: fixed;width: 100%;height: 100%;overflow: hidden;">
<div id="top_page"></div>
<div id  ="filter_box" style="margin:5px">


    <div class="input-group" style="width:100%">

        <input type="text" class="form-control search" style="height:40px;text-indent: 30px;background-image: url(img/search1.png); background-position: 7px 7px; background-repeat: no-repeat;" placeholder="Search criteria..."  id="filter_value" aria-describedby="basic-addon1">

    </div>


</div>

<div id="vehicles" style="margin:5px;height:73%;overflow:auto"></div>
<div id="btn-bar"  style="margin-top:5px;;position:fixed;bottom:0;height:12%;width:100%;background-color:#000000"></div>

</body>


<script type="text/javascript">


    window.onload = function(){

                $("#top_page").load("template.html");
                $("#btn-bar").load("button_bar.html");
                  storage.setItem("selectedSection","list");
                loadVehicles("");
                 $("#filter_value").keyup(function (e) {
                 if (e.keyCode === 13 || e.keyCode === 9) {


                         var searchString = $("#filter_value").val();

                        console.log(searchString)
                        loadVehicles(searchString);
                        }
                });
    };

</script>
